<!-- 
launch file for the octomap_server to start the octomap_mapping 
-->
<launch>
	<node pkg="octomap_server" type="octomap_server_node" name="octomap_server">
		<param name="resolution" value="0.2" />
		
		<!-- fixed map frame (set to 'map' if SLAM or localization running!) -->
		<param name="frame_id" type="string" value="map" />

		<!-- <param name="base_frame_id" type="string" value="base_link" />

		<param name="filter_ground" type="bool" value="true" /> -->

		<param name="latch" type="bool" value="false" />

		<!-- <param name="" type="" value="" />
		<param name="pointcloud_min_x" value=0.5 />
		<param name="pointcloud_min_y" value=0.5 />
		<param name="pointcloud_min_z" value=0.5 /> -->
		<param name="filter_zero_points" value="true" />
		
		<!-- maximum range to integrate (speedup!) -->
		<param name="sensor_model/max_range" value="7.0" />

		<!-- <param name="sensor_model/max" value="0.7" /> -->
		<!-- <param name="sensor_model/min" value="0.0" /> -->
		
		<!-- data source to integrate (PointCloud2) -->
		<remap from="cloud_in" to="/os1_cloud_node/points_batched" />
	
	</node>
</launch>